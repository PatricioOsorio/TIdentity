@model UserUpdateViewModel

@{
  ViewData["Title"] = "Editar usuario";
}

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h1 class="text-body-emphasis fw-semibold display-6 text-gradient">@ViewData["Title"]</h1>
    </div>
    <div class="col-md-6">
      <nav aria-label="breadcrumb" class="d-md-flex justify-content-end">
        <ol class="breadcrumb ms-auto p-3 rounded">

          <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="link-body-emphasis">
              <i class="fa-solid fa-house me-1"></i>Inicio
            </a>
          </li>

          <li class="breadcrumb-item">
            <a href="@Url.Action("ReadUsers", "SuperAdmin")" class="link-body-emphasis">
              <i class="fa-solid fa-users me-1"></i>
              Usuarios
            </a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <a>
              <i class="fas fa-edit me-1"></i>
              @ViewData["Title"]
            </a>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="bg-body-tertiary rounded p-ms-3 p-lg-4">
    <form asp-action="EditUser">

      <input type="hidden" asp-for="Id" />

      <p asp-validation-summary="ModelOnly" class="text-danger"></p>

      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <label asp-for="Email" class="control-label"></label>
          <input asp-for="Email" class="form-control" />
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
          <label asp-for="Nombre" class="control-label"></label>
          <input asp-for="Nombre" class="form-control" />
          <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-6">
          <label asp-for="ApellidoMaterno" class="control-label"></label>
          <input asp-for="ApellidoMaterno" class="form-control" />
          <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
        </div>
        <div class="col-md-6">
          <label asp-for="ApellidoPaterno" class="control-label"></label>
          <input asp-for="ApellidoPaterno" class="form-control" />
          <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
        </div>

        @* <div class="col-md-6">
        <label asp-for="RoleId" class="control-label"></label>
        <select asp-for="RoleId" class="form-select" required>
        <option value="">Selecciona un rol</option>
        @foreach (var role in Model.Roles)
        {
        <option value="@role.Value" selected="@(role.Value == Model.SelectedRoleId ? "selected" : null)">@role.Text</option>
        }
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
        </div> *@
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning"><i class="fas fa-save me-1"></i>Guardar</button>
        <a class="btn btn-light" asp-action="ReadUsers"><i class="fas fa-arrow-left me-1"></i>Regresar</a>
      </div>
    </form>
  </div>
</div>
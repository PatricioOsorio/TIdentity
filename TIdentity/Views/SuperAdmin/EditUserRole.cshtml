@model List<TIdentity.ViewModels.UserRolesManageViewModel>

@{
  ViewData["Title"] = "Roles de usuario";
}

<div class="bg-body rounded mt-4 p-5 shadow-lg">
  <h1 class="fw-bold text-body-emphasis display-6 mb-3 text-gradient">@ViewData["Title"]</h1>

  <form method="post">
    <div class="card border-primary">
      <div class="card-header text-bg-primary border-primary">
        <h2>Agregar / quitar roles del usuario: <span class="text-secondary">@ViewBag.UserName</span></h2>
      </div>
      <div class="card-body">

        <div class="mb-3">
          @for (var i = 0; i < Model.Count(); i++)
          {
            <div class="form-check form-switch m-1">
              <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
              <input type="hidden" asp-for="@Model[i].RoleId" />
              <input type="hidden" asp-for="@Model[i].RoleName" />
              <label asp-for="@Model[i].IsSelected" class="form-check-label">
                @Html.DisplayFor(modelItem => Model[i].RoleName)
              </label>
            </div>
          }
          <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <button type="submit" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Modificar</button>
        <a asp-controller="SuperAdmin" asp-action="ReadUserRoles" class="btn btn-secondary">
          <i class="fa-solid fa-ban me-1"></i>Cancelar
        </a>
      </div>
    </div>
  </form>
</div>
@* @model List<TIdentity.ViewModels.UserRolesViewModel> *@
@model IEnumerable<TIdentity.ViewModels.UserRolesViewModel>

@{
  ViewData["Title"] = "Roles de usuarios";
}

<div class="bg-body rounded mt-4 p-5 shadow-lg">
  <h1 class="fw-bold text-body-emphasis display-6 mb-3 text-gradient">@ViewData["Title"]</h1>


  @if (Model.Any())
  {
    <div class="table-responsive">
      <table id="MyTable" class="table table-striped table-hover table-borderless align-middle text-center">
        <thead class="table-primary">
          <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.ApellidoPaterno)</th>
            <th>@Html.DisplayNameFor(model => model.ApellidoMaterno)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Roles)</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          @foreach (var user in Model)
          {
            <tr>
              <td>@Html.DisplayFor(modelItem => user.Nombre)</td>
              <td>@Html.DisplayFor(modelItem => user.ApellidoPaterno)</td>
              <td>@Html.DisplayFor(modelItem => user.ApellidoMaterno)</td>
              <td>@Html.DisplayFor(modelItem => user.Email)</td>
              <td>@string.Join(" , ", user.Roles.ToList())</td>
              <td class="d-flex justify-content-center ">
                <a asp-controller="SuperAdmin" asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-warning mx-1"><i class="fas fa-edit me-1"></i>Cambiar</a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }
  else
  {
    <p>No existen registros</p>
  }
</div>
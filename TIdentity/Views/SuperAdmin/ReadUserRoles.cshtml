@model IEnumerable<UsersRolesViewModel>

@{
  ViewData["Title"] = "Roles de usuarios";
}

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h1 class="text-body-emphasis fw-semibold display-6 text-gradient">@ViewData["Title"]</h1>
    </div>
    <div class="col-md-6">
      <nav aria-label="breadcrumb" class="d-md-flex justify-content-end">
        <ol class="breadcrumb ms-auto p-3 rounded">

          <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="link-body-emphasis">
              <i class="fa-solid fa-house me-1"></i>Inicio
            </a>
          </li>

          <li class="breadcrumb-item active" aria-current="page">
            <a>
              <i class="fa-solid fa-address-book me-1"></i>
              @ViewData["Title"]
            </a>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  @if (Model.Any())
  {
    <div class="table-responsive bg-body-tertiary rounded">
      <div class="p-sm-2 p-lg-5">
        <table id="MyTable" class="table table-striped table-hover table-borderless align-middle text-center shadow rounded overflow-hidden">
          <thead class="table-primary">
            <tr>
              <th>@Html.DisplayNameFor(model => model.Nombre)</th>
              <th>@Html.DisplayNameFor(model => model.ApellidoPaterno)</th>
              <th>@Html.DisplayNameFor(model => model.ApellidoMaterno)</th>
              <th>@Html.DisplayNameFor(model => model.Email)</th>
              <th>@Html.DisplayNameFor(model => model.Roles)</th>
              <th>Acción</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            @foreach (var user in Model)
            {
              <tr>
                <td>@Html.DisplayFor(modelItem => user.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => user.ApellidoPaterno)</td>
                <td>@Html.DisplayFor(modelItem => user.ApellidoMaterno)</td>
                <td>@Html.DisplayFor(modelItem => user.Email)</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td class="d-flex justify-content-center align-items-center gap-1">
                  <a asp-controller="SuperAdmin" asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-outline-warning" title="Editar"><i class="fas fa-edit"></i></a>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  }
  else
  {
    <p>No existen registros</p>
  }
</div>